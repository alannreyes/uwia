# API Configuration
PORT=5015
NODE_ENV=development

# Database Configuration (MySQL)
DATABASE_URL=mysql://user:password@host:3306/database
DB_HOST=host
DB_PORT=3306
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=database
DB_DATABASE=database

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_VALIDATION_MODEL=gpt-4o
OPENAI_DUAL_VALIDATION=true
OPENAI_ENABLED=true
OPENAI_TIMEOUT=60000
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=1000
OPENAI_MAX_TEXT_LENGTH=500000
OPENAI_USE_FOR_SIMPLE_PDFS_ONLY=true
OPENAI_FALLBACK_TO_LOCAL=true
OPENAI_VISION_TEMPERATURE=0.1

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=30
OPENAI_RATE_LIMIT_RPM=60
OPENAI_RATE_LIMIT_TPM=30000
OPENAI_MAX_RETRIES=10
OPENAI_RETRY_DELAY=10000

# File Upload
MAX_FILE_SIZE=52428800

# Processing
LOCAL_PROCESSING_DEFAULT=false
LOCAL_PROCESSING_FOR_COMPLEX_PDFS=true

# Application
CORS_ORIGIN=*

# Database Table Configuration
DOCUMENT_PROMPTS_TABLE_NAME=document_prompts

# Logging
LOG_LEVEL=info

# ===== NUEVO: Configuración Gemini 2.5 Pro =====
# Gemini API Configuration (INICIALMENTE DESHABILITADO)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_ENABLED=false
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=8192
GEMINI_MAX_DOCUMENT_LENGTH=5000000
GEMINI_THINKING_MODE=true

# Gemini Rate Limits (Conservadores inicialmente)
GEMINI_RATE_LIMIT_RPM=60
GEMINI_RATE_LIMIT_TPM=1000000
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_BASE_DELAY=5000
GEMINI_RETRY_MAX_DELAY=30000
GEMINI_TIMEOUT=120000

# Gemini Performance
GEMINI_PERFORMANCE_LOGGING=false
GEMINI_SUCCESS_RATE_THRESHOLD=90
GEMINI_AUTO_FALLBACK=true

# Gemini Emergency Chunking (para docs >2M tokens)
GEMINI_EMERGENCY_CHUNKING=false
GEMINI_CB_THRESHOLD=5

# ===== Sistema de Migración Gradual =====
# CONTROL TOTAL - Sistema actual sigue funcionando
MIGRATION_MODE=off
CANARY_PERCENTAGE=0
OPENAI_GPT5_ENABLED=false
MIGRATION_ALLOW_FALLBACK=true

# Modelos para nueva arquitectura (cuando se habilite)
MIGRATION_PRIMARY_MODEL=gpt-5
MIGRATION_INDEPENDENT_MODEL=gemini-2.5-pro
MIGRATION_ARBITRATOR_MODEL=gpt-5