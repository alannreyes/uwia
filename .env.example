# API Configuration
PORT=5015
NODE_ENV=development

# Database Configuration (MySQL)
DATABASE_URL=mysql://user:password@host:3306/database
DB_HOST=host
DB_PORT=3306
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=database
DB_DATABASE=database

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_VALIDATION_MODEL=gpt-4o
OPENAI_DUAL_VALIDATION=true
OPENAI_ENABLED=true
OPENAI_TIMEOUT=60000
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=1000
OPENAI_MAX_TEXT_LENGTH=500000
OPENAI_USE_FOR_SIMPLE_PDFS_ONLY=true
OPENAI_FALLBACK_TO_LOCAL=true
OPENAI_VISION_TEMPERATURE=0.1

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=30
OPENAI_RATE_LIMIT_RPM=60
OPENAI_RATE_LIMIT_TPM=30000
OPENAI_MAX_RETRIES=10
OPENAI_RETRY_DELAY=10000

# File Upload
MAX_FILE_SIZE=52428800

# Processing
LOCAL_PROCESSING_DEFAULT=false
LOCAL_PROCESSING_FOR_COMPLEX_PDFS=true

# Application
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info